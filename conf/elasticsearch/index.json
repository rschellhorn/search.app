{
    "settings": {
        "number_of_shards": 5,
        "analysis": {
            "analyzer": {
                "html_analyzer": {
                    "type": "custom",
                    "language": "Dutch",
                    "char_filter": [ "scrub_html" ],
                    "tokenizer": "standard",
                    "filter": [ "standard", "lowercase" ]
                }
            },
            "char_filter": {
                "scrub_html": {
                    "type": "html_strip",
                    "read_ahead": 4096
                }
            }
        }
    },
    "mappings": {
        "lom": {
            "properties": {
                "context": { "type": "string", "index": "not_analyzed", "include_in_all": false },
                "contribution": {
                    "type": "nested",
                    "properties": {
                        "timestamp": { "type": "date", "format": "date_hour_minute_second", "ignore_malformed": true }
                    }
                },
                "costs": { "type": "boolean" },
                "description": { "type": "string", "analyzer": "html_analyzer", "store": "yes", "term_vector": "with_positions_offsets" },
                "duration": { "type": "long" },
                "file": { "type": "string", "index": "not_analyzed" },
                "keyword": { "type": "string" },
                "location": { "type": "string", "index": "not_analyzed", "include_in_all": false },
                "repository" : { "type": "string", "index": "not_analyzed", "include_in_all": false },
                "title": {
                    "type": "multi_field",
                    "fields": {
                        "title" : { "type": "string", "store": "yes", "term_vector": "with_positions_offsets" },
                        "untouched" : { "type": "string", "index": "not_analyzed", "null_value": "ZZZZZZ" }
                    }
                }
            }
        }
    }
}